<div class="bg-white min-h-screen flex flex-col justify-center items-center px-4 sm:px-8 lg:px-20">
    <h2 class="text-2xl sm:text-4xl font-bold mb-8 text-center pb-2">Testimonios</h2>
  
    <div class="flex items-center gap-4 pb-10 w-full max-w-4xl">
      <div class="border-t border-customAzul2 flex-grow"></div>
      <img src="../../public/Imagenes/cita.png" alt="icono de cita" class="w-12 sm:w-16 lg:w-20 h-auto">
      <div class="border-t border-customAzul2 flex-grow"></div>
    </div>
  
    <div class="flex flex-row md:flex-row items-center justify-between w-full max-w-4xl gap-4 md:gap-0">
      <!-- Flecha izquierda -->
      <button
        id="prev"
        class="p-3 rounded-full bg-blue-500 text-white hover:bg-blue-700 transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>
  
      <!-- Contenedor del testimonio -->
      <div class="flex flex-col items-center text-center gap-4 px-4 md:px-6 flex-1" id="testimonial-container">
        <p class="text-sm sm:text-lg md:text-xl text-gray-700 leading-relaxed max-w-full md:max-w-2xl">
          "Necesitaba un préstamo rápido para cubrir una emergencia médica y no quería afectar mi historial crediticio.
          Gracias a Casa_De_Empeños_Piura, pude obtener el dinero que necesitaba de manera rápida y segura, utilizando mis
          anillos de compromiso como garantía. ¡Muy recomendable!"
        </p>
        <img
          src="https://pymstatic.com/5844/conversions/personas-emocionales-wide_webp.webp"
          class="w-16 sm:w-24 md:w-32 rounded-full border-4 border-yellow-500 shadow-lg"
          alt="Persona emocionada"
        />
        <p class="font-bold text-gray-800">María López</p>
      </div>
  
      <!-- Flecha derecha -->
      <button
        id="next"
        class="p-3 rounded-full bg-blue-500 text-white hover:bg-blue-700 transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </div>
  </div>
  
  
  <script>
    const testimonials = [
      {
        img: 'https://pymstatic.com/5844/conversions/personas-emocionales-wide_webp.webp',
        text: 'Necesitaba un préstamo rápido para cubrir una emergencia médica y no quería afectar mi historial crediticio. Gracias a Casa_De_Empeños_Piura, pude obtener el dinero que necesitaba de manera rápida y segura, utilizando mis anillos de compromiso como garantía. ¡Muy recomendable!',
        name: 'María López'
      },
      {
        img: 'https://example.com/testimonio2.jpg',
        text: 'Gracias a esta casa de empeños, pude financiar un proyecto personal sin complicaciones. Recomiendo totalmente el servicio.',
        name: 'Carlos Pérez'
      },
      {
        img: 'https://example.com/testimonio3.jpg',
        text: 'Excelente atención y rapidez. Volvería a confiar en ellos para cualquier necesidad financiera.',
        name: 'Ana Fernández'
      }
    ];
  
    let currentIndex = 0;
    const imgElement = document.querySelector('#testimonial-container img');
    const textElement = document.querySelector('#testimonial-container p:first-of-type');
    const nameElement = document.querySelector('#testimonial-container p:last-of-type');
  
    function updateTestimonial(index) {
      imgElement.src = testimonials[index].img;
      textElement.textContent = `"${testimonials[index].text}"`;
      nameElement.textContent = testimonials[index].name;
    }
  
    // Actualizar al cargar
    updateTestimonial(currentIndex);
  
    document.getElementById('prev').addEventListener('click', () => {
      currentIndex = (currentIndex - 1 + testimonials.length) % testimonials.length;
      updateTestimonial(currentIndex);
    });
  
    document.getElementById('next').addEventListener('click', () => {
      currentIndex = (currentIndex + 1) % testimonials.length;
      updateTestimonial(currentIndex);
    });
  </script>
  