<style>
    .accordion-active {
    @apply text-customAzul;
}

.accordion-inactive {
    @apply text-white;
}
</style>

<script>
   const accordionHeader = document.querySelectorAll(".accordion-header");

accordionHeader.forEach((header) => {
    header.addEventListener("click", () => {
        const accordionBody = header.nextElementSibling;
        const accordionContainer = header.parentElement;
        const icon = header.querySelector(".accordion-icon");
        const questionText = header.querySelector("span.text-white, span.text-customAzul"); // Seleccionar ambos colores posibles

        header.classList.toggle("active");

        if (header.classList.contains("active")) {
            accordionBody.style.maxHeight = accordionBody.scrollHeight + "px";                   
            accordionContainer.classList.add("border", "border-customAzul");
            accordionContainer.classList.add("bg-transparent");
            accordionContainer.classList.remove("bg-customAzul");

            icon.innerHTML =
                '<svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#0F2F76"><path d="M200-440v-80h560v80H200Z"/></svg>';

            // Cambiar texto a azul
            questionText.classList.remove("accordion-inactive");
            questionText.classList.add("accordion-active");
        } else {
            accordionBody.style.maxHeight = 0;
            accordionContainer.classList.remove("border", "border-customAzul");
            accordionContainer.classList.add("bg-customAzul");
            accordionContainer.classList.remove("bg-transparent");

            icon.innerHTML =
                '<svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e8eaed"><path d="M440-440H200v-80h240v-240h80v240h240v80H520v240h-80v-240Z"/></svg>';

            // Cambiar texto a blanco
            questionText.classList.remove("accordion-active");
            questionText.classList.add("accordion-inactive");
        }
    });
});

</script>


