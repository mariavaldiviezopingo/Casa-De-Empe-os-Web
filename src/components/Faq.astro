<script>
    const accordionHeader = document.querySelectorAll(".accordion-header");

    accordionHeader.forEach((header) => {
        header.addEventListener("click", () => {
            const accordionBody = header.nextElementSibling;
            const accordionContainer = header.parentElement;
            const icon = header.querySelector(".accordion-icon");
            header.classList.toggle("active");

            if (header.classList.contains("active")) {
                accordionBody.style.maxHeight = accordionBody.scrollHeight + "px";                   
                accordionContainer.classList.add(
                    "border",
                    "border-customDorado",
                );
                accordionContainer.classList.add("bg-transparent");
                accordionContainer.classList.remove("bg-customDorado");
                icon.innerHTML =
                    '<svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e8eaed"><path d="M200-440v-80h560v80H200Z"/></svg>';
            } else {
                accordionContainer.classList.remove(
                    "border",
                    "border-customDorado",
                );
                accordionBody.style.maxHeight = 0;
                accordionContainer.classList.add("bg-customDorado");
                accordionContainer.classList.remove("bg-transparent");
                icon.innerHTML =
                    '<svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e8eaed"><path d="M440-440H200v-80h240v-240h80v240h240v80H520v240h-80v-240Z"/></svg>';
            }
        });
    });
</script>

